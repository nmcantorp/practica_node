extends ./layout.jade

block contenido
    form(action="/users", method="POST")
        div(class="form-group")
            label(for="email") Email
            input(type="text", name="email", placeholder="Email", id="email", class="form-control")
        div(class="form-group")
            label(for="password") Password
            input(type="password", name="password", placeholder="Contraseña", id="password", class="form-control")
        div(class="form-group")
            label(for="password_confirmation") Confirma tu Password
            input(type="password", name="password_confirmation", placeholder="Confirmar Contraseña", id="password_confirmation", class="form-control")
        div(class="form-group")
            label(for="user_name") Nombre de Usuario
            input(type="text", name="user_name", placeholder="Nombre de Usuario", id="user_name", class="form-control")
        div
            input(type="submit", value="Iniciar", class="btn btn-primary")
